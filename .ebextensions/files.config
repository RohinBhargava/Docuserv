files:
    "/home/ec2-user/mount.sh" :
        mode: "000755"
        owner: root
        group: root
        content: |
            #! /bin/sh
            mkdir /docuserv
            mount /dev/xvdf /docuserv
            chown -R wsgi:root /docuserv
            ln -s /opt/python/run/venv/bin/activate activate
            ln -s /opt/python/bundle/*/app app
